    {
    	$this->_db = new Application_Model_DbTable_Usuario();
    }

    public function indexAction()
    {
        // action body
    }

    public function addAction()
    {
        $dados = array(
        	'id' => null,
        	'nome' => 'Zé',
        	'email' => 'ze@teste.com',
        	'login' => 'zeninguem',
        	'senha' => md5('123456')
        );
        
        $res = $this->_db->insert($dados);
    }

    public function updateAction()
    {
        $dados = array(
        	'nome' => 'Seu Nome Aqui',
	        'email' => 'seu@email.com',
	        'login' => 'seu_login',
	        'senha' => md5('sua_senha'),
        );
    }


}





